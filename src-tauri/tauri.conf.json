{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "creaminder",
  "version": "0.1.0",
  "identifier": "com.orbitale.creaminder",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Creaminder",
        "width": 800,
        "height": 900
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["*/**", "**", "*", "**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "assets/test.txt": "assets/test.txt",
      "assets/empty.db": "assets/empty.db"
    }
  }
}
